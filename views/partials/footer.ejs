<div class="music-player">
    <div class="song-bar">
        <div class="song-infos">
            <div class="image-container">
                <img src="" class="image-control" hidden/>
            </div>
            <div class="song-description">
                <a class="title-control text-decoration-none text-white"></a>
                <p class="artist-control text-white-50"></p>
            </div>
        </div>
    </div>
    <div class="progress-controller">
        <div class="control-buttons">
            <!-- <i class="fas fa-random"></i> -->
            <i class="fas fa-step-backward"></i>
            <i class="play-pause fas fa-play" id="play-music-bar"></i>
            <i class="fas fa-step-forward"></i>
            <!-- <i class="fas fa-undo-alt"></i> -->
        </div>
        <div class="progress-container">
            <span class="start-time"></span>
            <div class="progress-bar">
                <input class="progress-music" id="music_bar" type="range" step="0.1"></input>
            </div>
            <span class="end-time"></span>
        </div>
    </div>
    <div class="other-features">
        <!-- <i class="fas fa-list-ul"></i> -->
        <!-- <i class="fas fa-desktop"></i> -->
        <div class="volume-bar" id="volume-bar">
            <i class="fas fa-volume-down"></i>
            <div class="progress-bar">
                <input class="progress-volume p-0 m-0" id="volume_bar" value="0.1" type="range" min="0" max="0.5"
                    step="0.005"></input>
            </div>
        </div>
    </div>
</div>
</body>

</html>