	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link
		href="https://fonts.googleapis.com/css2?family=Akshar:wght@400;700&family=Roboto:ital,wght@0,100;0,300;0,400;0,900;1,100&display=swap"
		rel="stylesheet">

