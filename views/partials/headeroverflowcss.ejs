	<title>Yfitops</title>
</head>

<body class="overflow-y">

	<% if (!currentUser) { %>
		<div class="nav-topbar">
			<div class="box bg-3">
				<a class="text-decoration-none" href="/login">
					<button
						class="button button--moema button--inverted button--text-thick button--size-s">Login</button>
				</a>

				<a class="text-decoration-none" href="/register">
					<button
						class="button button--moema button--inverted button--text-thick button--size-s">Register</button>
				</a>
			</div>
		</div>
		<% } else { %>
			<div class="nav-topbar">
				<div class="box bg-3">
					<div class="profile-bg">
						<img src="/apicture/user.png" width="30px" height="30px">
					</div>
					<a class="text-decoration-none" href="/login">
						<button class="button button--moema button--inverted button--text-thick button--size-s">
							<%= currentUser.username %>
						</button>
					</a>

					<a class="text-decoration-none" href="/logout">
						<button
							class="button button--moema button--inverted button--text-thick button--size-s">Logout</button>
					</a>
				</div>
			</div>
			<% } %>
				<% if(error && error.length>0){ %>
					<div class='alert alert-danger' role='alert'>
						<%= error %>
					</div>
					<% } %>
						<% if(success && success.length>0){ %>
							<div class='alert alert-success' role='alert'>
								<%= success %>
							</div>
							<% } %>